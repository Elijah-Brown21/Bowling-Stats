<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_dialog"
            android:text="XX/XX/XXXX"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game1_dialog"
            android:text="Game 1: XXX"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/date_dialog"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game2_dialog"
            android:text="Game 2: XXX"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/game1_dialog"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game3_dialog"
            android:text="Game 3: XXX"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/game2_dialog"
            android:layout_margin="15dp"/>

    </RelativeLayout>

</LinearLayout>